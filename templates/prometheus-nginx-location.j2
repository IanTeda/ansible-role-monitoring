# Prometheus Nginx Location Block
# ===============================
#
# This configuration provides a reverse proxy for Prometheus web interface
# under the /prometheus path. Direct access is still available on port 9090
# as a fallback when nginx proxy is not working.
#
# This file is included by nginx_{{ ansible_hostname }}_server.conf via:
# include /etc/nginx/conf.d/prometheus.conf;
# 
# Do not add server blocks here - only location blocks
#
# Security: Prometheus bound to localhost only, exposed via nginx proxy
# Access: http://hostname/{{ monitoring_prometheus.path_prefix }}/ (recommended)
#
# Created: 2025-06-29
#==============================================================================

# Prometheus web interface proxy configuration
location /{{ monitoring_prometheus.path_prefix }}/ {
    # Proxy to Prometheus with proper path handling
    proxy_pass http://127.0.0.1:{{ monitoring_prometheus.port }}/{{ monitoring_prometheus.path_prefix }}/;

    # Essential proxy headers for proper request handling
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;

    # Handle redirects properly to maintain /{{ monitoring_prometheus.path_prefix }}/ prefix
    proxy_redirect http://127.0.0.1:{{ monitoring_prometheus.port }}/ /{{ monitoring_prometheus.path_prefix }}/;
    proxy_redirect / /{{ monitoring_prometheus.path_prefix }}/;

    # Support for WebSocket connections and HTTP/1.1 (for live updates)
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # Increase timeouts for long-running queries
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 300s;
    
    # Buffer settings for large metric responses
    proxy_buffering on;
    proxy_buffer_size 128k;
    proxy_buffers 4 256k;
    proxy_busy_buffers_size 256k;
    
    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
}

# Handle /{{ monitoring_prometheus.path_prefix }} without trailing slash
location = /{{ monitoring_prometheus.path_prefix }} {
    return 301 /{{ monitoring_prometheus.path_prefix }}/;
}

# Prometheus API endpoints (for external tools)
location /{{ monitoring_prometheus.path_prefix }}/api/ {
    # Proxy to Prometheus API
    proxy_pass http://127.0.0.1:{{ monitoring_prometheus.port }}/{{ monitoring_prometheus.path_prefix }}/api/;

    # API-specific headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Content-Type application/json;
    
    # Longer timeouts for complex queries
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;
    
    # No caching for API responses
    add_header Cache-Control "no-cache, no-store, must-revalidate";
    add_header Pragma "no-cache";
    add_header Expires "0";
}
